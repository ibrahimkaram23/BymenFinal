@model List<BymenFinal.Models.team>
@{
    ViewBag.Title = "OurTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Our Team</h4>
                <a class="btn btn-primary" href="/Admin/AddTeamMember">Add Team Member</a>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Member </th>
                                <th> Name </th>
                                <th> Position </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/Content/images/Team/@item.image" alt="image" />
                                    </td>
                                    <td> @item.Name </td>
                                    <td> @item.Position </td>
                                    <td><a class="btn btn-danger" href="/Admin/DeleteTeam/@item.Id">Delete</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

