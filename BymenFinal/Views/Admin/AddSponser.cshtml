@model BymenFinal.Models.sponser
@{
    ViewBag.Title = "AddSponser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            <span>
                @TempData["Error"]
            </span>
        </div>
    }
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add Sponsor</h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleInputName1">Sponsor Name</label>
                        @Html.TextBoxFor(n => n.Name, new { @class = "form-control", placeholder = "Sponsor Name" })
                        @*<input type="text" class="form-control" id="exampleInputName1" placeholder="Name">*@
                        <span class="text-danger">@Html.ValidationMessageFor(n => n.Name)</span>
                    </div>
                    <div class="form-group">
                        <label>File upload</label>
                        <input type="file" name="img" class="form-control" required>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Add</button>
                    <a class="btn btn-dark" href="/Admin/Sponsers">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>